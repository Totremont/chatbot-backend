generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Clients {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  channels       Int
  client_code    String
  client_name    String
  client_region  String
  downstream     Int
  full_pack      String
  hd_channels    Int
  includes_movil Boolean
  includes_tv    Boolean
  internet_pack  String
  movil_data     Int
  movil_extras   String[]
  movil_gens     String
  movil_pack     String
  roaming        Boolean
  total_price    Int
  tv_extras      String[]
  tv_pack        String
  uhd_channels   Int
  upstream       Int
}

model Internet_planes {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  downstream Int
  name       String @unique
  price      Int
  upstream   Int

  @@map("Internet-planes")
}

model Movil_planes {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  data        Int
  extras      String[]
  generations String
  name        String  @unique
  price       Int
  roaming     Boolean

  @@map("Movil-planes")
}

model Reclamos {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  expedition  DateTime @db.Date
  status      String
  user_code   String
}

model Regions {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  available Boolean
  name      String  @unique
}

model Television_planes {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  channels      Int
  extras        String[]
  fhd_channels  Int
  name          String  @unique
  price         Int
  uhd_channels_ Int      @map("uhd_channels:")

  @@map("Television-planes")
}
