generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Clients {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  band_width      Int
  channels        Int
  client_code     String
  client_name     String
  client_region   String
  down_speed      Int
  hd_channels     Int
  includes_movil  Boolean
  includes_tv     Boolean
  movil_pack      String
  movil_services  String[]
  pack_name       String
  price           Int
  roaming         Boolean
  stream_services String[]
  tv_pack         String
  up_speed        Int
}

model Internet_planes {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  down_speed Int
  name       String
  price      Int
  up_speed   Int

  @@map("Internet-planes")
}

model Movil_planes {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  band_width     Int
  name           String
  other_services String[]
  price          Int
  roaming        Boolean

  @@map("Movil-planes")
}

model Regions {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  available Boolean
  name      String  @unique
}

model Television_planes {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  channels        Int
  hd_channels     Int
  name            String
  price           Int
  stream_services String[]

  @@map("Television-planes")
}
